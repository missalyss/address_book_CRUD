<h3>Edit Contact</h3>


{{#each onePerson}}
<form class="form-group" action="/contacts/{{id}}?_method=put" method="post">
{{>new}}

  <select class="custom-select" name="address_id">
    <option selected>Address</option>
    <option name="address_id" value="{{address_id}}">{{line_1}}, {{line_2}}, {{city}}</option>
  </select> </br></br>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>
{{/each}}
